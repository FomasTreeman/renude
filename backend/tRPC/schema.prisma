generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Listing {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  price       Int
  description String?
  sold        Boolean     @default(false)
  userId      Int
  user        User        @relation(fields: [userId], references: [id])
  image       Image[]
  favourite   Favourite[]
  offer       Offer[]
  order       Order[]

  @@index([userId])
}

model Offer {
  id        Int      @id @default(autoincrement())
  price     Int
  accepted  Boolean?
  userId    Int
  listingId Int
  user      User     @relation(fields: [userId], references: [id])
  listing   Listing  @relation(fields: [listingId], references: [id])

  @@index([userId])
  @@index([listingId])
}

model Order {
  id        Int     @id @default(autoincrement())
  userId    Int
  listingId Int
  user      User    @relation(fields: [userId], references: [id])
  listing   Listing @relation(fields: [listingId], references: [id])

  @@index([userId])
  @@index([listingId])
}

model Image {
  id        Int     @id @default(autoincrement())
  path      String
  listingId Int
  listing   Listing @relation(fields: [listingId], references: [id])

  @@index([listingId])
}

model Favourite {
  id        Int     @id @default(autoincrement())
  userId    Int
  listingId Int
  user      User    @relation(fields: [userId], references: [id])
  listing   Listing @relation(fields: [listingId], references: [id])

  @@index([userId])
  @@index([listingId])
}

model Rating {
  id     Int  @id @default(autoincrement())
  rating Int
  txId   Int
  rxId   Int
  tx     User @relation("tx", fields: [rxId], references: [id])
  rx     User @relation("rx", fields: [txId], references: [id])

  @@index([txId])
  @@index([rxId])
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  lng       Float?
  lat       Float?
  listing   Listing[]
  favourite Favourite[]
  ratingRx  Rating[]    @relation("rx")
  ratingTx  Rating[]    @relation("tx")
  Order     Order[]
  Offer     Offer[]
}
