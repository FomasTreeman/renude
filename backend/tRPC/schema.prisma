// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
model Listing {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  price       Int
  description String?
  sold        Boolean     @default(false)
  userId      Int
  user        User        @relation(fields: [userId], references: [id])
  image       Image[] // one-to-many relation
  favourite   Favourite[] // one-to-many relation

  @@index([userId])
}

model Image {
  id        Int     @id @default(autoincrement())
  path      String
  listingId Int
  lsiting   Listing @relation(fields: [listingId], references: [id])

  @@index([listingId])
}

model Favourite {
  id        Int     @id @default(autoincrement())
  userId    Int
  listingId Int
  user      User    @relation(fields: [userId], references: [id])
  listing   Listing @relation(fields: [listingId], references: [id])

  @@index([userId])
  @@index([listingId])
}

model Rating {
  id     Int  @id @default(autoincrement())
  rating Int
  tx     User @relation("tx", fields: [rxId], references: [id])
  txId   Int
  rx     User @relation("rx", fields: [txId], references: [id])
  rxId   Int

  @@index([txId])
  @@index([rxId])
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  lng       Float?
  lat       Float?
  listing   Listing[] // one-to-many relation
  favourite Favourite[] // one-to-many relation
  ratingRx  Rating[]    @relation("rx") // one-to-many relation
  ratingTx  Rating[]    @relation("tx") // one-to-many relation
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}
